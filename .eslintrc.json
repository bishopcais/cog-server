{
    "parserOptions": {
      "ecmaVersion": 2018,
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "script"
    },

    "env": {
      "es6": true,
      "node": true,
      "browser": true,
      "mocha": true,
      "jquery": true
    },

    "globals": {
      "document": false,
      "navigator": false,
      "window": false
    },

    "plugins": [
      "react"
    ],

    "extends": [
      "@masterodin/eslint-config-javascript",
      "plugin:react/recommended"
    ],

    "rules": {
      "react/prop-types": "off"
    },

    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
